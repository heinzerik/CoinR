@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="headline">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-4 login-wrapper">

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="login-section">

                <div class="input-area">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h3>Email</h3>
                    <div class="form-floating input-area">
                        <input asp-for="Input.Email" class="form-control forminput" autocomplete="username" aria-required="true"/>
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                </div>

                <div class="input-area">
                    <h3>Username</h3>
                    <div class="form-floating input-area">
                        <input asp-for="Input.Username" class="form-control forminput" autocomplete="username" aria-required="true"/>
                        <label asp-for="Input.Username"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="input-area">
                    <h3>Password</h3>
                    <div class="form-floating input-area">
                        <input asp-for="Input.Password" class="form-control forminput" autocomplete="new-password" aria-required="true"/>
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="input-area">
                    <h3>repeat Password</h3>
                    <div class="form-floating input-area">
                        <input asp-for="Input.ConfirmPassword" class="form-control forminput" autocomplete="new-password" aria-required="true"/>
                        <label asp-for="Input.ConfirmPassword"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login instead</a>
            </div>
            <button id="registerSubmit" type="submit" class="signonbtn fas fa-angle-right"/>
        </form>
    </div>
